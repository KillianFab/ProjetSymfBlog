{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article | {{ article.title }}</h1>


    <div class="row">
        <div class="col-lg-12">
            <div class="float-right ">{{ include('article/_delete_form.html.twig') }}</div>
            <a class="btn btn-primary float-right" href="{{ path('article.edit', {'id': article.id}) }}">MODIFIER</a>
            <a href="{{ path('article.index') }}">back to list</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            {{ article.content |raw }}
        </div>
        <div class="col-lg-4">
            <div class="row">

                <div class="col-lg-12">
                    <img class="img-fluid" src="/images/articles/{{ article.imageName }}">
                </div>
                <div class="col-lg-12">
                    ID : {{ article.id }}
                </div>
                <div class="col-lg-12">
                    Publié : {{ article.published }}
                </div>
                <div class="col-lg-12">
                    Caroussel : {{ article.published }}
                </div>
                <div class="col-lg-12">
                    Crée par :
                </div>
                <div class="col-lg-12">
                    Article crée le :
                </div>


            </div>
        </div>
    </div>


{% endblock %}
