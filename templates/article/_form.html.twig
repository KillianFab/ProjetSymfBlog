{{ form_start(form) }}
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-lg-12">
                    {{ form_row(form.content) }}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.miseAvant) }}
                </div>
                <div class="col-lg-12">
                    {{ form_row(form.published) }}
                </div>
                <div class="col-lg-12">
                    {{ form_row(form.image_url) }}
                </div>
                <div class="col-lg-12">
                    {{ form_row(form.categories) }}
                </div>
            </div>
        </div>
    </div>
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
