{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <style>
        .icon-green{
            color:green;
        }
        .icon-red{
            color:darkred;
        }
    </style>
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Publié?</th>
                <th>Carrousel</th>
                <th>Title</th>
                <th>Author_id</th>
                <th>Crée le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.published ? '<i class="icon-green fas fa-check-circle"></i>' : '<i class="icon-red fas fa-check-circle"></i>' }}</td>
                <td>{{ article.miseAvant ? '<i class="icon-green fas fa-check-circle"></i>' : '<i class="icon-red fas fa-check-circle"></i>' }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.authorId }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article.show', {'id': article.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('article.edit', {'id': article.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article.new') }}">Create new</a>
{% endblock %}
